{% extends 'base.html.twig' %}

{% set route_name = app.request.attributes.get('_route') %}

{% block title %}Hello CompanyController!{% endblock %}

{% block body %}
<div>
        <div>
                <a class="btn btn-outline-dark btn-sm " href="{{ path('company_create') }}">Ajouter une Entreprise.</a>
        </div>
    {% for company in companies %}
        <div>
            {{company.name}}
        </div>
        <div>
            {{company.email}}
        </div>
        <div>
            
            <a class="btn btn-outline-dark btn-sm" href="{{ path('company_edit', {'id' : company.id}) }}">Modifier</a>
        </div>
        <br>
    {% endfor %}
</div>
{% endblock %}
