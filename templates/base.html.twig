<!DOCTYPE html>
{% set route_name = app.request.attributes.get('_route') %}

<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    {% endblock %}

    {% block javascripts %}
    {% endblock %}
</head>
<body>
<div class="container">
    <header class="d-flex flex-wrap justify-content-center py-3 mb-4 border-bottom">
        <a class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-dark text-decoration-none" href="{{ path ('home') }}">
            <img class="bi me-2" width="40" height="30" src="{{ asset('build/images/logo.png') }}" alt="">
            <span class="fs-4">
                InterimJob
            </span>
        </a>
        <ul class="nav nav-pills nav-fill ">
            <li class="nav-item">
                <a class="nav-link {% if route_name == "home" %} active {% endif %}" href="{{ path ('home') }}">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link {% if route_name == "app_offer" %} active {% endif %}"
                   href="{{ path ('app_offer') }}">Offers</a>
            </li>
            <li class="nav-item">
                <a class="nav-link " href="#">Matching</a>
            </li>
            <li class="nav-item">
                <a class="nav-link {% if route_name == "app_company" %} active {% endif %}"
                   href="{{ path ('app_company') }}">Company</a>
            </li>
            <li class="nav-item">
                <a class="nav-link {% if route_name == "app_candidate" %} active {% endif %}"
                   href="{{ path ('app_candidate') }}">Candidates</a>
            </li>
        </ul>
    </header>
</div>

{% block body %}

{% endblock %}

<div class="container">
    <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
        <p class="col-md-4 mb-0 text-muted">© 2022 Company, Inc </p>
        <a class="col-md-4 d-flex align-items-center justify-content-center mb-3 mb-md-0 me-md-auto link-dark text-decoration-none"
           href="{{ path ('home') }}">
            <img class="bi me-2" width="40" height="30" src="{{ asset('build/images/logo.png') }}" alt="">
        </a>
        <ul class="nav col-md-4 justify-content-end">
            <li class="nav-item">
                <a class="nav-link px-2 text-muted " href="/home">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link px-2 text-muted " href="/offer">Offers</a>
            </li>
            <li class="nav-item">
                <a class="nav-link px-2 text-muted" href="#">Matching</a>
            </li>
            <li class="nav-item">
                <a class="nav-link px-2 text-muted" href="/company">Company</a>
            </li>
            <li class="nav-item">
                <a class="nav-link px-2 text-muted" href="/candidate">Candidates</a>
            </li>
        </ul>
    </footer>
</div>
</body>
</html>
