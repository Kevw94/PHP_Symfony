{% extends 'base.html.twig' %}

{% block title %}Offers !{% endblock %}

{% block body %}
    <div class="card-header text-center mb-5">
        <h3 class="m-3">
        Voici vos offres auquelles vous avez postul√© !
        </h3>
    </div>
    <div class="container">

        <div class="row justify-content-center">

        {% for candidacy in candidacies %}
            <div class="card mb-4" style="width: 20rem;">
                <div class="card-body">
                    <h5 class="card-title">{{ candidacy.offer.company.name }}</h5>
                    <h5 class="card-title">{{ candidacy.offer.description }}</h5>
                    {% for skill in candidacy.offer.skills %}
                        <h6 class="card-subtitle mb-2 text-muted">{{ skill.skills }}</h6>
                    {% endfor %}
                </div>
            </div>
            <br>
        {% endfor %}
        </div>
    </div>
{% endblock %}
